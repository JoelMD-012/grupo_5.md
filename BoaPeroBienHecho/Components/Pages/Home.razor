                    </svg>
                </div>
                <div class="iconTab0">
                    <h3>Reserva</h3>
                </div>


            </div>
            <div tabindex="1" class="@(selectedTab == 1 ? "selected" : "unselected") derecha"
            @onclick="() => SelectTab(1)">
